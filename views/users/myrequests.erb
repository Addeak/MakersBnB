<main class="container">
<h1>Your bookings</h1>
<% if @user_bookings.empty? %>
  <p>You have no bookings</p>
<% else %>
  <div class="container-list">
  <% @user_bookings.each do |booking| %>
  <ul class="list-item">
<li><h4><%= booking.place_title %></h4></li>
<li><h5>Location: <%= booking.location %></h5></li>
<li><h5>Price: Â£<%= booking.place_price %> per night</h5></li>
<li><h5>Check-in on: <%= booking.check_in_date %></h5></li>
<li><h5>Check-out on: <%= booking.check_out_date %></h5></li>
<li><h5>Status: <%= booking.status %></h5></li>
</ul>
  <% end %>
  </div>
<% end %>
</main>